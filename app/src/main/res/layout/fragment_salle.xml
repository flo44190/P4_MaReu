<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/fragment_salle_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp" />
    <TextView
        android:id="@+id/fragment_salle_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/fragment_salle_checkBox"
        app:layout_constraintTop_toTopOf="@id/fragment_salle_checkBox"
        app:layout_constraintBottom_toBottomOf="@id/fragment_salle_checkBox"
        android:text="Salle A"/>
    <ImageView
        android:id="@+id/fragment_salle_color_img"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/fragment_salle_checkBox"
        app:layout_constraintBottom_toBottomOf="@id/fragment_salle_checkBox"
        app:layout_constraintStart_toEndOf="@id/fragment_salle_txt"
        android:layout_margin="16dp"
        android:background="@color/A"
        android:src="@drawable/circle"/>

</androidx.constraintlayout.widget.ConstraintLayout>